{% for post in postslist | reverse %}
  <div class='row p-4 mx-2 mt-3 border-bottom border-secondary'>

    <div class="col-xs-12 col-sm-2 ">
      <img class="blog-image" width="100%" height="100%" src="/img/remote/{{ post.data.image }}"/>
    </div>

    <div class="col-xs-12 col-sm-10">
      <span class="h3">
        <a class="text-dark bold" href="{{ post.url | url }}">
          {% if post.data.title %}{{ post.data.title }}
          {% else %}
            <code>{{ post.url }}</code>
          {% endif %}
        </a>
      </span>
      <div class="text-secondary">
        <time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
        |
        {% block extraArticleHeader %}
          {% set wc = content | striptags | wordcount %}
          {% set wPerMinute = (wc / 240) + 1 %}
          <span>
            {{ wPerMinute | round }}
            min read.
          </span>
        {% endblock %}
      </div>
      <div >
        Tags:
        {% for tag in post.data.tags %}
          {%- if collections.tagList.indexOf(tag) != -1 -%}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <a href="{{ tagUrl | url }}" class="badge badge-secondary">{{ tag }}</a>
          {%- endif -%}
        {% endfor %}
      </div>

      {% block article %}
        {%- if post.data.page.excerpt -%}
          {{ post.data.page.excerpt |safe}}

          <div class="d-flex">
            <div class="mt-auto ml-auto">
              <a class="btn btn-primary float-right mb-10 mr-10" href="{{ post.url | url }}">
                Read more
              </a>
            </div>
          </div>

        {%- endif -%}
      {% endblock %}
    </div>

  </div>
{% endfor %}