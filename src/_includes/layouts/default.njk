<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>
      {{ metaTitle or renderData.title or title or metadata.title | escape }}
    </title>
    <meta
      property="og:title"
      content="{{ metaTitle or renderData.title or title or metadata.title | escape }}"
    />
    {% set desc = renderData.description or description %} {% if not desc %} {%
    set desc = content | striptags | truncate(140) %} {% endif %} {% if desc %}
    <meta name="description" content="{{ desc | escape }}" />
    <meta property="og:description" content="{{ desc | escape }}" />
    {% endif %}
    <meta name="keywords" content="{{ metaKeywords }}" />
    <meta name="author" content="{{ author.name }}" />
    <meta name="robots" content="index, follow" />
    {% if thumb %}
    <meta property="og:image" content="{{ thumb }}" />
    {% else%}
    <meta property="og:image" content="assets/img/logo.png" />
    {% endif %}
    <link rel="canonical" href="{{ site.url | url }}{{ page.url }}" />
    <link rel="icon" type="image/svg+xml" href="/assets/img/logo.svg" />
    <link
      rel="apple-touch-icon"
      href="{{ '/assets/img/apple-touch-icon.png' | url }}"
    />

    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=fallback"
    />
    <link rel="stylesheet" href="{{ '/assets/css/main.css' | url }}" />
  </head>

  <body class="flex flex-col min-h-screen bg-white text-slate-800 break-words">
    {% include "partials/header.njk" %}
    <div class="flex flex-grow flex-col md:flex-row">
      <div class="bg-secondary-50 p-4 hidden md:flex md:w-1/4">
        <div class="mb-4">
          <img
            src="/assets/img/me.jpg"
            alt="Blog Owner"
            class="rounded-full w-24 h-24 object-cover object-center"
          />
        </div>
      </div>
      <main class="bg-white mx-7 lg:mx-6 mt-4 md:w-3/4 flex-grow">
        {% if layout === "post" %}
        {{ content | safe }}
        {% else %}
        <div class="max-w-5xl mx-auto min-h-screen">
          {{ content | safe }}
        </div>
        {% endif %}
      </main>
    </div>
    {% include "partials/footer.njk" %}
    <script src="{{ '/assets/js/bundle.js' | url }}"></script>
  </body>
</html>
