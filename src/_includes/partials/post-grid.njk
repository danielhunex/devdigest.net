{%- set lazyImage = "data:image/svg+xml,%3Csvg%20xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg'%20viewBox%3D'0%200%201%201'%20height%3D'500'%20width%3D'960'%20style%3D'background-color%3Argb(203%2C213%2C224)'%2F%3E" -%}

  {% for post in paged.posts %}
  <article class="border-b-2 border-secondary-300 rounded-lg shadow-sm mb-8">
    <div>
      <div class="w-full">
        <h2 class="text-2xl font-bold text-secondary mb-4">
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h2>
      </div>
      <div class="flex flex-row">
        {% if loop.index % 2 != 0 %}
          <div class="md:w-1/3 md:order-first hidden md:flex mr-4 md:mb-2" >
            {% else %}
          <div class="md:w-1/3 md:order-last hidden md:flex ml-4 md:mb-2">
          {% endif %}
              <a href="{{ post.url }}">
                <img class="rounded-lg h-auto w-full lazy" src="{{ lazyImage }}" data-src="{% if post.data.thumb %}{{ post.data.thumb | url }}{% else %}{{ '/assets/img/no-image.svg' | url }}{% endif %}" alt="{{ post.data.title }}">
                
              </a>
          </div>
          <div class="md:w-2/3 w-full">

            <p class="text-gray-600 mb-4">{{ post.data.excerpt }}</p>
            <a class="flex items-center text-sm text-accent-500 font-medium mb-4" href="{{ post.url }}">
              <span class="relative">Read more</span>
              <svg class="relative mt-px overflow-visible ml-2.5 text-accent-300" width="3" height="6" viewBox="0 0 3 6"
                fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M0 0L3 3L0 6"></path>
              </svg>
            </a>
            <div class="flex flex-wrap">
              {% for tag in post.data.tags %}

              <a href="{{ '/tags/' | url }}{{ tag }}"
                class="inline-block mb-2 bg-primary py-1 px-2 text-accent-500 text-sm rounded-full hover:text-secondary mr-4">
                #{{ tag | capitalize }}
              </a>
              {% endfor %}
            </div>
          </div>

        </div>
      </div>
  </article>
  {% endfor %}
