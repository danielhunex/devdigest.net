{%- set lazyImage = "data:image/svg+xml,%3Csvg%20xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg'%20viewBox%3D'0%200%201%201'%20height%3D'500'%20width%3D'960'%20style%3D'background-color%3Argb(203%2C213%2C224)'%2F%3E" -%}

  <div class="flex flex-wrap -mx-4">
    {% for post in paged.posts %}
        <article class="p-4  border-b-2 border-secondary-300 rounded-lg shadow-sm">
        <div class="flex flex-row">
          {% if loop.index % 2 == 0 %}
            <div class="w-1/3 order-last md:order-first">
          {% else %}
            <div class="w-1/3 order-first md:order-last">
          {% endif %}
            <a href="{{ post.url }}">
              <img src="{{ post.data.thumb }}" alt="{{ post.data.title }}" class="rounded-lg h-auto w-full">
            </a>
          </div>
          <div class="w-2/3 px-4">
             <h2 class="text-2xl font-bold text-secondary mb-4">
                <a href="{{ post.url }}">{{ post.data.title }}</a>
            </h2>
            <p class="text-gray-600 mb-4">{{ post.data.excerpt }}</p>
            <div class="flex flex-wrap">
              {% for tag in post.data.tags %}

                <a href="{{ '/tags/' | url }}{{ tag }}" class="inline-block mb-2 bg-accent py-1 px-2 text-secondary text-sm rounded-full hover:text-secondary-900 mr-4">
        {{ tag | capitalize }}
    </a>
              {% endfor %}
            </div>
          </div>
        </div>
      </article>
   {% endfor %}
  </div>